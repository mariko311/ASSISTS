<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tommy.asists">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="com.example.tommy.asists.activity_main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoryActivity">
            <intent-filter>
                <action android:name="com.example.tommy.asists.activity_category" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>
        <intent-filter>
            <action android:name="com.example.tommy.asists.activity_login" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        <activity android:name=".SignupEmployeerActivity">
            <intent-filter>
                <action android:name="com.example.tommy.asists.activity_signup_employeer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".JobCategoryActivity"/>
        <intent-filter>
            <action android:name="com.example.tommy.asists.activity_job_category" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </application>

    </manifest>